{
  "version": "2.0.0",
  "tasks": [
    {
      // 表示名
      "label": "make dev",
      // タスクのタイプ。shellかprocessを指定
      "type": "shell",
      // 🌟 実行するコマンド
      "command": "make dev",
      // タスクが所属するグループ。test、build、noneのいずれかを指定
      "group": "none",
      // 実行結果の表示方法について指定
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
      // 🌟 フォルダを開くと同時に実行する
        "runOn": "folderOpen"
      }
    }
  ]
}
